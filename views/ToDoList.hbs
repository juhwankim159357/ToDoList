<div class="row">
    <div class="col-md-12">
        <a href="/ToDoList/add" class="btn btn-success pull-right">Add To Do List</a>
        <hr/>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <th>NAME</th>
                    <th>DESCRIPTION</th>
                </thead>
                <tbody>
                {{#each ToDoList}}
                <tr>
                    <td>{{this.Listname}}</td>
                    <td>{{this.Description}}</td>
                    <td><a class="btn btn-danger" href="/ToDoList/delete/{{this.Listnum}}">remove</a></td>
                </tr>
                {{/each}}
                </tbody>
            </table>
         </div>
    </div>
    {{#unless ToDoList}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>